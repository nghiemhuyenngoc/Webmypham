@model IEnumerable<Model.Framework.ThongTinSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Main Content -->
<div id="content">

    <!-- Topbar -->
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

        <!-- Sidebar Toggle (Topbar) -->
        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
        </button>

        <!-- Topbar Search -->
        <form action=@Url.Action("Index", "ChiTietPhieuNhap", FormMethod.Get) method="Get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
            <div class="input-group">
                @Html.TextBox("SearchString", (string)ViewBag.searchValue)
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- Topbar Navbar -->

    </nav>
    <!-- End of Topbar -->
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Kho.MaSP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KhuyenMai.TenKhuyenMai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LoaiSanPham.TenLoaiSanPham)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenSP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GiaBan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoTaSP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.XuatXu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.img)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kho.MaSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhuyenMai.TenKhuyenMai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiaBan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTaSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.XuatXu)
                    </td>
                    <td>
                        <img style="height:50px; width:50px;" src="~/Assets/product/@Html.DisplayFor(modelItem => item.img)" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
                    </td>
                </tr>
            }

        </table>
        </div>
</div>