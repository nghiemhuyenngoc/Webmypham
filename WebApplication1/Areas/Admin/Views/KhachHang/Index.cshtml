@model IEnumerable<Model.Framework.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Main Content -->
<div id="content">

    <!-- Topbar -->
    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

        <!-- Sidebar Toggle (Topbar) -->
        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
        </button>

        <!-- Topbar Search -->
        <form action=@Url.Action("Index", "KhachHang", FormMethod.Get) method="Get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
            <div class="input-group">
                @Html.TextBox("SearchString", (string)ViewBag.searchValue)
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- Topbar Navbar -->

    </nav>
    <!-- End of Topbar -->
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>

        <table class="table">
            <tr>
                <th>
                    Customer name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Street
                </th>
                <th>
                    District
                </th>
                <th>
                    City
                </th>
                <th>
                    Country
                </th>
                @*<th>
                    Số lần mua
                </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChiKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DuongPhoKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuanHuyenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThanhPhoKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuocGiaKH)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.SoLanMua)
                    </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaKH }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.MaKH })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
